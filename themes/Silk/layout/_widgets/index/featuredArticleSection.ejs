<!-- 特色文章 -->
<section class="py-8 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <% site.posts.filter(post => post.featured).limit(1).each(function(post) {
    %>
    <div
      class="mt-16 mb-16 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-2xl p-8 md:p-12"
    >
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-2/3 mb-8 md:mb-0 md:pr-8">
          <div class="flex items-center mb-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary"
            >
              <i class="fa fa-star"></i>
            </div>
            <span class="ml-3 text-primary font-medium">特色文章</span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold mb-4">
            <a
              href="<%- post.permalink %>"
              class="hover:text-primary transition-colors"
              ><%= post.title %></a
            >
          </h3>
          <% let text = post.content.replace(/<[^>]+>/g, '').trim(); %> <% let
          isChinese = /[一-龥]/.test(text); %> <% let length = isChinese ? 100 :
          150; %>
          <p class="text-gray-600 mb-6 md:mb-8">
            <%= post.excerpt || text.substring(0, length) + (text.length >
            length ? '...' : '') %>
          </p>
          <div class="flex items-center">
            <img
              src="<%- url_for('/images/default-avatar.jpg') %>"
              class="w-10 h-10 rounded-full"
              loading="lazy"
            />
            <div class="ml-3">
              <div class="font-medium"><%= config.author.name %></div>
            </div>
          </div>
        </div>
        <div class="md:w-1/3">
          <img
            src="<%- post.cover ? post.cover : `https://picsum.photos/600/400?random=${post.id}` %>"
            alt="<%= post.title %>"
            class="rounded-xl shadow-lg w-full"
            loading="lazy"
          />
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</section>
