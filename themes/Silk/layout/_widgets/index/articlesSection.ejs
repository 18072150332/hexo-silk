<!-- 文章区域 -->
<section id="articles" class="py-16 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-3xl font-bold">最新文章</h2>
      <a
        href="<%- url_for('/archives/') %>"
        class="text-primary font-medium hover:underline flex items-center"
      >
        查看全部 <i class="fa fa-arrow-right ml-2"></i>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% page.posts.each(function(post) { %>
      <article class="bg-white rounded-xl overflow-hidden shadow-md card-hover">
        <div class="relative h-48 overflow-hidden">
          <% if (post.cover) { %>
          <img
            src="<%= post.cover %>"
            alt="<%= post.title %>"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <% } else { %>
          <img
            src="https://picsum.photos/600/400?random=2"
            alt="<%= post.title %>"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <% } %>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2">
            <a href="<%- post.permalink %>"><%= post.title %></a>
          </h3>
          <% let text = post.content.replace(/<[^>]+>/g, '').trim(); %> <% let
          isChinese = /[一-龥]/.test(text); %> <% let length = isChinese ? 50 :
          100; %>
          <p class="text-gray-600 mb-4">
            <%= post.excerpt || text.substring(0, length) + (text.length >
            length ? '...' : '') %>
          </p>
          <div class="flex items-center">
            <span class="text-sm text-gray-500">
              <i class="fa fa-calendar mr-1"></i> <%= date(post.date,
              'YYYY-MM-DD') %>
            </span>
          </div>
        </div>
      </article>
      <% }); %>
    </div>
  </div>
</section>
