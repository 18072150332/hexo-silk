<!-- 关于我-->
<section id="articles" class="py-8 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <section
      id="about"
      class="py-16 bg-gradient-to-br from-primary/5 to-secondary/5"
    >
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold">关于博主</h2>
          <div class="w-20 h-1 bg-primary mx-auto mt-4"></div>
        </div>
        <div
          class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden"
        >
          <div class="md:flex">
            <div
              class="md:w-1/3 bg-primary/10 flex items-center justify-center p-8"
            >
              <% const author = config.author || {}; %>
              <div class="text-center">
                <% if (author.avatar) { %>
                <img
                  src="<%- url_for(author.avatar) %>"
                  alt="<%= author.name %>"
                  class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-white shadow-lg"
                />
                <% } else { %>
                <img
                  src="<%- url_for('/images/default-avatar.jpg') %>"
                  alt="<%= author.name || 'Author' %>"
                  class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-white shadow-lg"
                />
                <% } %>
                <h3 class="mt-4 text-xl font-bold">
                  <%= author.name || 'John Doe' %>
                </h3>
                <p class="text-primary mt-1">
                  <%= config.subtitle || 'Tech Enthusiast' %>
                </p>
              </div>
            </div>
            <div class="md:w-2/3 p-8 md:p-10">
              <h4 class="text-xl font-semibold mb-4">关于我</h4>
              <p class="text-gray-700 leading-relaxed mb-6">
                <%= config.description ||
                '热爱技术与分享的开发者，致力于记录学习历程和技术心得。' %>
              </p>
              <div class="flex flex-wrap gap-4 mt-6">
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
                >
                  <i class="fa fa-github"></i>
                </a>
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
                >
                  <i class="fa fa-twitter"></i>
                </a>
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
                >
                  <i class="fa fa-linkedin"></i>
                </a>
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
                >
                  <i class="fa fa-envelope"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>
