<section class="pt-32 pt-16 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-10xl mx-auto">
      <!-- 文章标题和元数据 -->
      <div class="mb-10 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-balance">
          <%= page.title %>
        </h1>

        <div
          class="flex flex-wrap justify-center items-center text-gray-500 space-x-4 text-sm"
        >
          <% const author = page.author || config.author || {}; %>
          <div class="flex items-center">
            <img
              src="<%- url_for('/images/default-avatar.jpg') %>"
              alt="Unknown Author"
              class="w-6 h-6 rounded-full mr-2"
            />
            <span><%= author.name || 'Unknown Author' %></span>
          </div>
          <span
            ><i class="fa fa-calendar mr-1"></i> <%= date(page.date,
            'YYYY-MM-DD') %></span
          >
          <% if (page.categories && page.categories.length) { %>
          <span>
            <i class="fa fa-folder mr-1"></i>
            <% page.categories.each(function(category, i) { %>
            <a
              href="<%- category.permalink %>"
              class="hover:text-primary transition-colors"
              ><%= category.name %></a
            ><% if (i < page.categories.length - 1) { %>, <% } %> <% }); %>
          </span>
          <% } %>
        </div>
      </div>

      <!-- 文章封面图 -->
      <% if (page.cover) { %>
      <div class="mb-10 rounded-xl overflow-hidden shadow-lg">
        <img
          src="<%- page.cover %>"
          alt="<%= page.title %>"
          class="w-full h-auto object-cover"
        />
      </div>
      <% } %>

      <!-- 文章正文 -->
      <article
        class="prose prose-lg max-w-none mb-16 bg-white rounded-xl p-8 shadow-md markdown-body"
      >
        <%- page.content %>
      </article>

      <!-- 标签 -->
      <% if (page.tags && page.tags.length) { %>
      <div class="mt-8 mb-8">
        <span class="text-gray-500 mr-3"><i class="fa fa-tags"></i> 标签:</span>
        <div class="inline-flex flex-wrap gap-2">
          <% page.tags.each(function(tag) { %>
          <a
            href="<%- tag.permalink %>"
            class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm hover:bg-primary/20 transition-colors"
          >
            <%= tag.name %>
          </a>
          <% }); %>
        </div>
      </div>
      <% } %>

      <!-- 作者信息 -->
      <div
        class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-xl p-6"
      >
        <div class="flex items-center">
          <img
            src="<%- url_for('/images/default-avatar.jpg') %>"
            alt="<%= author.name || 'Author' %>"
            class="w-16 h-16 rounded-full"
          />
          <div class="ml-4">
            <h3 class="text-xl font-bold"><%= author?.name || '作者名字' %></h3>
            <p class="text-gray-600 mt-1"><%= author?.bio || '个人简介' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
