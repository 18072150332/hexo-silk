<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= page.title %> | <%= config.title %></title>
    <script src="<%- url_for('/js/tailwindcss3.4.16.js')%>"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2C5F2D',
                        secondary: '#2C5F2D',
                        dark: '#1E293B',
                        light: '#F8FAFC'
                    },
                    fontFamily: {
                        inter: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="<%- url_for('/css/font-awesome.min.css')%>">
    <link rel="stylesheet" href="<%- url_for('/css/css2.css?family=Inter:wght@300;400;500;600;700&display=swap')%>">
    <link rel="stylesheet" href="<%- url_for('/css/tailwind.css')%>">
    <link rel="stylesheet" href="<%- url_for('/css/github.markdown.css')%>">
    

    <style type="text/tailwindcss">
        @layer utilities {
            .content-auto {
                content-visibility: auto;
            }
            .text-balance {
                text-wrap: balance;
            }
            .animate-float {
                animation: float 3s ease-in-out infinite;
            }
            .transition-all-300 {
                transition: all 0.3s ease;
            }
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }
            .card-hover {
                @apply transition-all duration-300 hover:shadow-lg hover:-translate-y-1;
            }
        }
        
        @keyframes float {
            0% { transform: translateY(0px); } 
            50% { transform: translateY(-10px); } 
            100% { transform: translateY(0px); } 
        }
    </style>
</head>
<body class="font-inter bg-gray-50 text-dark">
    <!-- 导航栏 -->
    <header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="navbar">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <!-- 桌面导航 -->
                <nav class="hidden md:flex space-x-8">
                    <a href="<%- url_for('/') %>" class="font-medium text-primary hover:text-primary/80 transition-colors">首页</a>
                </nav>
                
                <!-- 搜索和菜单按钮 -->
                <div class="flex items-center space-x-4">
                    <button class="text-gray-700 hover:text-primary transition-colors">
                        <i class="fa fa-search text-lg"></i>
                    </button>
                    <button class="md:hidden text-gray-700 hover:text-primary transition-colors" id="menuBtn">
                        <i class="fa fa-bars text-lg"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- 移动端导航菜单 -->
        <div class="md:hidden hidden bg-white shadow-lg absolute w-full" id="mobileMenu">
            <div class="container mx-auto px-4 py-4 flex flex-col space-y-4">
                <a href="<%- url_for('/') %>" class="font-medium text-primary py-2 border-b border-gray-100">首页</a>
            </div>
        </div>
    </header>

    <!-- 文章内容区域 -->
    <section class="pt-32 pb-16 bg-white">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-10xl mx-auto">
                <!-- 文章标题和元数据 -->
                <div class="mb-10 text-center">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-balance"><%= page.title %></h1>
                    
                    <div class="flex flex-wrap justify-center items-center text-gray-500 space-x-4 text-sm">
                        <% const author = page.author || config.author || {}; %>
                        <div class="flex items-center">
                            <img src="<%- url_for('/images/default-avatar.jpg') %>" alt="Unknown Author" class="w-6 h-6 rounded-full mr-2">
                            <span><%= author.name || 'Unknown Author' %></span>
                        </div>
                        <span><i class="fa fa-calendar mr-1"></i> <%= date(page.date, 'YYYY-MM-DD') %></span>
                        <% if (page.categories && page.categories.length) { %>
                        <span>
                            <i class="fa fa-folder mr-1"></i>
                            <% page.categories.each(function(category, i) { %>
                                <a href="<%- category.permalink %>" class="hover:text-primary transition-colors"><%= category.name %></a><% if (i < page.categories.length - 1) { %>, <% } %>
                            <% }); %>
                        </span>
                        <% } %>
                    </div>
                </div>

                <!-- 文章封面图 -->
                <% if (page.cover) { %>
                <div class="mb-10 rounded-xl overflow-hidden shadow-lg">
                    <img src="<%- page.cover %>" alt="<%= page.title %>" class="w-full h-auto object-cover">
                </div>
                <% } %>

                <!-- 文章正文 -->
                <article class="prose prose-lg max-w-none mb-16 bg-white rounded-xl p-8 shadow-md markdown-body">
                    <%- page.content %>
                </article>

                <!-- 标签 -->
                <% if (page.tags && page.tags.length) { %>
                <div class="mb-16">
                    <span class="text-gray-500 mr-3"><i class="fa fa-tags"></i> 标签:</span>
                    <div class="inline-flex flex-wrap gap-2">
                        <% page.tags.each(function(tag) { %>
                        <a href="<%- tag.permalink %>" class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm hover:bg-primary/20 transition-colors">
                            <%= tag.name %>
                        </a>
                        <% }); %>
                    </div>
                </div>
                <% } %>

                <!-- 作者信息 -->
                <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-xl p-6 mb-16">
                    <div class="flex items-center">
                        <img src="<%- url_for('/images/default-avatar.jpg') %>" alt="<%= author.name || 'Author' %>" class="w-16 h-16 rounded-full">
                        <div class="ml-4">
                            <h3 class="text-xl font-bold"><%= author?.name || '作者名字' %></h3>
                            <p class="text-gray-600 mt-1"><%= author?.bio || '个人简介' %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 相关文章 -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold mb-12 text-center">相关文章</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (page.related_posts && page.related_posts.length) { %>
                <% page.related_posts.limit(3).each(function(relatedPost) { %>
                <article class="bg-white rounded-xl overflow-hidden shadow-md card-hover">
                    <div class="relative h-48 overflow-hidden">
                        <% if (relatedPost.cover) { %>
                        <img src="<%= relatedPost.cover %>" alt="<%= relatedPost.title %>" class="w-full h-full object-cover">
                        <% } else { %>
                        <img src="https://picsum.photos/600/400?random=<%= relatedPost.id %>" alt="<%= relatedPost.title %>" class="w-full h-full object-cover">
                        <% } %>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">
                        <a href="<%- relatedPost.permalink %>" class="hover:text-primary transition-colors"><%= relatedPost.title %></a>
                    </h3>
                        <p class="text-gray-600 mb-4">
                            <% let text = relatedPost.content.replace(/<[^>]+>/g, '').trim(); %>
                            <% let isChinese = /[一-龥]/.test(text); %>
                            <% let length = isChinese ? 50 : 100; %>
                            <%= relatedPost.excerpt || text.substring(0, length) + (text.length > length ? '...' : '') %>
                        </p>
                        <div class="flex items-center text-sm text-gray-500">
                            <i class="fa fa-calendar mr-1"></i> <%= date(relatedPost.date, 'YYYY-MM-DD') %>
                        </div>
                    </div>
                </article>
                <% }); %>
                <% } %>
            </div>
        </div>
    </section>

    <script>
        // 移动端菜单切换
        document.getElementById('menuBtn').addEventListener('click', function() {
            document.getElementById('mobileMenu').classList.toggle('hidden');
        });

        // 导航栏滚动效果
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('bg-white', 'shadow-md');
            } else {
                navbar.classList.remove('bg-white', 'shadow-md');
            }
        });
    </script>
</body>
</html>