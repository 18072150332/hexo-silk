<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= page.description || config.description %>">
    <meta name="keywords" content="<%= page.keywords || config.keywords %>">
    <!-- Open Graph -->
    <meta property="og:title" content="<%= page.title %>">
    <meta property="og:type" content="article">
    <meta property="og:url" content="<%= page.permalink %>">
    <meta property="og:image" content="<%= page.cover || config.cover %>">
    <meta property="og:description" content="<%= page.description || config.description %>">

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= page.title %>">
    <meta name="twitter:description" content="<%= page.description || config.description %>">
    <meta name="twitter:image" content="<%= page.cover || config.cover %>">
    <!-- 页面标题 -->
    <title><%= isPostPage ? (page.title || config.title): config.title %></title>
    <link rel="stylesheet" href="<%- url_for('/css/main.css')%>">
    <link rel="stylesheet" href="<%- url_for('/css/font-awesome.min.css')%>">
    <link rel="stylesheet" href="<%- url_for('/css/css2.css?family=Inter:wght@300;400;500;600;700&display=swap')%>">
    <!-- post页面需要markdown样式 -->
    <% if (hasMarkdown) { %>
    <script src="<%- url_for('/js/Valine.min.js')%>"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
    <!-- 替换原来的 highlight.js 样式文件 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/atom-one-dark.min.css">
    <link rel="stylesheet" href="<%- url_for('/css/github.markdown.css')%>">
    <% } %>
    
    <style type="text/tailwindcss">
        @layer utilities {
            .content-auto {
                content-visibility: auto;
            }
            .text-balance {
                text-wrap: balance;
            }
            .animate-float {
                animation: float 3s ease-in-out infinite;
            }
            .transition-all-300 {
                transition: all 0.3s ease;
            }
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }
            .card-hover {
                @apply transition-all duration-300 hover:shadow-lg hover:-translate-y-1;
            }
        }
        
        @keyframes float {
            0% { transform: translateY(0px); } 
            50% { transform: translateY(-10px); } 
            100% { transform: translateY(0px); } 
        }
    </style>
</head>